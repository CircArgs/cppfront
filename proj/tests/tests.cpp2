myfunc: (opt: int) -> (valid: bool, error: int, val: std::string) = {
	if(opt){

		error = 0;
		val = "This is the value";
	}else{
		valid = false;
		error = 1;
		val = "Error";
	}
}

main: () = {
    answer := myfunc(0);
	std::cout << "valid = (answer.valid)$, error = (answer.error)$, val = (answer.val)$\n";
    answer = myfunc(1);
	std::cout << "valid = (answer.valid)$, error = (answer.error)$, val = (answer.val)$\n";
}
